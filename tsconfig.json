{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./", // Ensure the base is the root of the project
    "paths": {}, // Keep empty to avoid module alias issues
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true, // Recommend enabling for better safety
    "noImplicitAny": true, // Recommend enabling for stricter type checking
    "strictBindCallApply": true, // Enforce stricter function typing
    "forceConsistentCasingInFileNames": true, // Prevent file casing issues
    "noFallthroughCasesInSwitch": true, // Prevent logical errors in switch cases
    "resolveJsonModule": true, // Allow importing JSON files
    "esModuleInterop": true // Ensure compatibility with CommonJS modules
  },
  "include": ["src/**/*.ts"], // Include all TypeScript files in src folder
  "exclude": ["node_modules", "dist", "**/*.spec.ts"] // Exclude build and test files
}
